<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/r1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deafaultFragmentBackground"
    android:orientation="vertical"
    tools:context="architect.jazzy.medicinereminder.Fragments.DashboardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@+id/newsLayout"
        android:weightSum="6">

        <TextView
            android:id="@+id/quoteText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_background"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/dailyQuote"
            android:textColor="#000"
            android:textSize="14sp"
            android:textStyle="italic" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="#000"
            android:paddingBottom="1dp"
            android:paddingTop="1dp"
            android:orientation="vertical"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:weightSum="4">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:layout_gravity="center"
                    android:background="@color/dashboardMedicineCountColor"
                    android:gravity="center"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/medicineCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="5"
                        android:textColor="#FFF"
                        android:textSize="48sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:padding="10dp"
                        android:text="Medicines\nToday"
                        android:textColor="#FFF"
                        android:textSize="20sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/medicine1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:layout_marginBottom="1dp"
                        android:background="@color/dashboardMedicineColor2"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="5"
                        android:padding="5dp"
                        android:text="No more medicines"
                        android:textColor="@color/dashboardMedicineTextColor"
                        android:textSize="11sp" />


                    <TextView
                        android:id="@+id/medicine2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:background="@color/dashboardMedicineColor"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="5"
                        android:layout_marginBottom="1dp"
                        android:padding="5dp"
                        android:text="No more medicines"
                        android:textColor="@color/dashboardMedicineTextColor"
                        android:textSize="11sp" />


                </LinearLayout>

            </LinearLayout>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="4">

                <TextView
                    android:id="@+id/medicine6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/dashboardMedicineColor2"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="5"
                    android:padding="5dp"
                    android:text="No more medicines"
                    android:textColor="@color/dashboardMedicineTextColor"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/medicine5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/dashboardMedicineColor"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="5"
                    android:layout_marginLeft="1dp"
                    android:padding="5dp"
                    android:text="No more medicines"
                    android:textColor="@color/dashboardMedicineTextColor"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/medicine4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/dashboardMedicineColor2"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:layout_marginLeft="1dp"
                    android:maxLines="5"
                    android:padding="5dp"
                    android:text="No more medicines"
                    android:textColor="@color/dashboardMedicineTextColor"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/medicine3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/dashboardMedicineColor2"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="5"
                    android:layout_marginLeft="1dp"
                    android:padding="5dp"
                    android:text="No more medicines"
                    android:textColor="@color/dashboardMedicineTextColor"
                    android:textSize="11sp" />

            </TableRow>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/adViewContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="2">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/adViewContainer1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/adViewContainer2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal" />


        </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/actionBackground"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:id="@+id/newsLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:singleLine="true"
            android:text="News: "
            android:textColor="#FFF"
            android:textSize="15sp"
            android:paddingLeft="5dp"
            android:background="@color/color_red"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/newsfeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="marquee"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="1"
            android:padding="5dp"
            android:singleLine="true"
            android:text="Medical News"
            android:textColor="#FFF"
            android:textSize="15sp" />
    </LinearLayout>
