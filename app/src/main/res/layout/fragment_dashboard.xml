<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/r1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical"
    tools:context=".MedicalAssistant.Fragments.DashboardFragment" >

  <ImageView
      android:id="@+id/backParent"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scaleType="centerCrop"
      android:src="@drawable/back_city" />


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:weightSum="6" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:layout_weight="1.5"
        android:orientation="horizontal"
        android:weightSum="3" >


      <architect.jazzy.medicinereminder.MedicalAssistant.CustomViews.CircleView
          android:id="@+id/circleMedicineList"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          app:isButton="true"
          app:text="My\nMedicines"
          app:textSize="12sp" />


      <architect.jazzy.medicinereminder.MedicalAssistant.CustomViews.CircleView
          android:id="@+id/circleSearch"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          app:isButton="true"
          app:text="Search"
          app:textColor="#000"
          app:textSize="12sp" />

      <architect.jazzy.medicinereminder.MedicalAssistant.CustomViews.CircleView
          android:id="@+id/circleDoctorList"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          app:isButton="true"
          app:text="My\nDoctors"
          app:textColor="#000"
          app:textSize="12sp" />


    </LinearLayout >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:layout_weight="1.5"
        android:orientation="horizontal"
        android:weightSum="3" >

      <architect.jazzy.medicinereminder.MedicalAssistant.CustomViews.CircleView
          android:id="@+id/circleAddMedicine"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          app:isButton="true"
          app:text="Add\nMedicines"
          app:textSize="12sp" />


      <ImageView
          android:id="@+id/appIcon"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:padding="20dp"
          android:scaleType="centerInside"
          android:src="@mipmap/ic_launcher" />

      <architect.jazzy.medicinereminder.MedicalAssistant.CustomViews.CircleView
          android:id="@+id/circleNews"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          app:isButton="true"
          app:text="News"
          app:textSize="12sp" />


      <!--<CircleView-->
      <!--android:id="@+id/findDoctor2"-->
      <!--android:layout_width="0dp"-->
      <!--android:layout_height="match_parent"-->
      <!--android:layout_weight="1"-->
      <!--app:isButton="true"-->
      <!--app:text="Find\nHospitals"-->
      <!--app:textSize="12sp" />-->


    </LinearLayout >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:orientation="vertical"
        android:paddingBottom="1dp"
        android:paddingTop="1dp"
        android:weightSum="3" >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="2"
          android:orientation="horizontal"
          android:weightSum="4" >

        <LinearLayout
            android:id="@+id/countBack"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:background="@color/dashboardMedicineCountColor"
            android:gravity="center"
            android:orientation="horizontal" >

          <TextView
              android:id="@+id/medicineCount"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:padding="10dp"
              android:text="5"
              android:textColor="#FFF"
              android:textSize="48sp" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="10dp"
              android:padding="10dp"
              android:text="Medicines\nToday"
              android:textColor="#FFF"
              android:textSize="20sp" />

        </LinearLayout >


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >


          <TextView
              android:id="@+id/medicine1"
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_marginBottom="1dp"
              android:layout_weight="3"
              android:background="@color/dashboardMedicineColor2"
              android:ellipsize="end"
              android:gravity="center"
              android:lines="3"
              android:maxLines="5"
              android:padding="5dp"
              android:text="No more medicines"
              android:textColor="@color/dashboardMedicineTextColor"
              android:textSize="11sp" />


          <TextView
              android:id="@+id/medicine2"
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_marginBottom="1dp"
              android:layout_weight="3"
              android:background="@color/dashboardMedicineColor"
              android:ellipsize="end"
              android:gravity="center"
              android:lines="3"
              android:maxLines="5"
              android:padding="5dp"
              android:text="No more medicines"
              android:textColor="@color/dashboardMedicineTextColor"
              android:textSize="11sp" />


        </LinearLayout >

      </LinearLayout >

      <TableRow
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1"
          android:weightSum="4" >

        <TextView
            android:id="@+id/medicine6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/dashboardMedicineColor2"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="3"
            android:maxLines="5"
            android:padding="5dp"
            android:text="No more medicines"
            android:textColor="@color/dashboardMedicineTextColor"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/medicine5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="@color/dashboardMedicineColor"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="3"
            android:maxLines="5"
            android:padding="5dp"
            android:text="No more medicines"
            android:textColor="@color/dashboardMedicineTextColor"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/medicine4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="@color/dashboardMedicineColor2"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="3"
            android:maxLines="5"
            android:padding="5dp"
            android:text="No more medicines"
            android:textColor="@color/dashboardMedicineTextColor"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/medicine3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="@color/dashboardMedicineColor2"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="3"
            android:maxLines="5"
            android:padding="5dp"
            android:text="No more medicines"
            android:textColor="@color/dashboardMedicineTextColor"
            android:textSize="11sp" />

      </TableRow >


    </LinearLayout >

  </LinearLayout >


</RelativeLayout >