<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="architect.jazzy.medicinereminder.Activities.PopupWindow"
    android:background="#ffffff">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:id="@+id/t1"
        android:background="@color/actionBackgroundDark"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="Medicine Time"
        android:textColor="#FFF"
        android:textSize="18sp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:id="@+id/list"
        android:layout_below="@+id/t1"
        android:padding="5dp"
        android:layout_above="@+id/popup_buttons"/>

    <TableRow android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:id="@+id/popup_buttons"
        android:gravity="end"
        android:background="#FFF"
        android:weightSum="4">

        <View android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/snooze"
            app:mrl_rippleAlpha="0.1"
            app:mrl_rippleBackground="#FFFFFF"
            app:mrl_rippleColor="@color/rippleColor"
            app:mrl_rippleDelayClick="true"
            app:mrl_rippleDimension="10dp"
            app:mrl_rippleDuration="400"
            app:mrl_rippleFadeDuration="200"
            app:mrl_rippleHover="true"
            app:mrl_rippleOverlay="true">
            <TextView
                android:id="@+id/stopr"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:background="#FFF"
                android:textSize="13sp"
                android:text="Snooze"
                android:textColor="@color/actionBackground" />

        </com.balysv.materialripple.MaterialRippleLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            app:mrl_rippleAlpha="0.1"
            app:mrl_rippleBackground="#FFFFFF"
            app:mrl_rippleColor="@color/rippleColor"
            app:mrl_rippleDimension="10dp"
            android:id="@+id/done"
            app:mrl_rippleDuration="400"
            app:mrl_rippleFadeDuration="200"
            app:mrl_rippleDelayClick="true"
            app:mrl_rippleHover="true"
            android:layout_weight="1"
            app:mrl_rippleOverlay="true">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/but_add_medicine"
                android:layout_height="match_parent"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="#FFF"
                android:text="Done"
                android:textColor="@color/actionBackground" />

        </com.balysv.materialripple.MaterialRippleLayout>

    </TableRow>

