<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/backParent"
    android:minHeight="@dimen/newsItemTitleHeight"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/newsItemTitleHeight"
        app:elevation="5dp"
        app:cardElevation="3dp"
        android:gravity="center_vertical"
        android:background="@color/newsItemBackgroundColor"
        app:cardMaxElevation="5dp">

        <RelativeLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:minHeight="@dimen/newsItemTitleHeight"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                android:textSize="18sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="Title"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/altTitle"
                android:textSize="12sp"
                android:layout_marginTop="3dp"
                android:textStyle="italic"
                android:text="Alt title"
                android:layout_below="@+id/title"/>


            <TextView
                android:id="@+id/fullSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_below="@+id/altTitle"
                android:layout_marginTop="3dp"
                android:layout_centerVertical="true"
                android:maxLines="2"
                android:ellipsize="end"
                android:padding="2dp"
                android:text="News Item"
                android:textColor="@color/newsItemTextColor"
                android:textSize="14sp" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>
</FrameLayout>