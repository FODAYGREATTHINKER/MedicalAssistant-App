<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/backParent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/newsItemTitleHeight" >

  <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/newsItemBackgroundColor"
      android:gravity="center_vertical"
      android:minHeight="@dimen/newsItemTitleHeight"
      app:cardCornerRadius="5dp"
      app:cardElevation="3dp"
      app:cardMaxElevation="5dp"
      app:cardPreventCornerOverlap="true"
      app:cardUseCompatPadding="true"
      app:elevation="5dp" >

    <RelativeLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:minHeight="@dimen/newsItemTitleHeight"
        android:orientation="vertical"
        android:padding="10dp" >

      <TextView
          android:id="@+id/title"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Title"
          android:textColor="#000"
          android:textSize="18sp"
          android:textStyle="bold" />

      <TextView
          android:id="@+id/altTitle"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/title"
          android:layout_marginTop="3dp"
          android:text="Alt title"
          android:textSize="12sp"
          android:textStyle="italic" />


      <TextView
          android:id="@+id/fullSummary"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/altTitle"
          android:layout_centerVertical="true"
          android:layout_marginTop="3dp"
          android:ellipsize="end"
          android:gravity="center_vertical"
          android:maxLines="2"
          android:padding="2dp"
          android:text="News Item"
          android:textColor="@color/newsItemTextColor"
          android:textSize="14sp" />


    </RelativeLayout >


  </android.support.v7.widget.CardView >
</FrameLayout >