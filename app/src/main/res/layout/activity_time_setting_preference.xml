<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:orientation="vertical"
    tools:context=".MedicalAssistant.Activities.TimeSettingPreference" >

  <android.support.v7.widget.Toolbar
      android:id="@+id/toolBar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/actionBackground"
      android:theme="@style/Theme.AppCompat" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/actionBackground"
        android:gravity="center"
        android:paddingBottom="2sp"
        android:text="Set Alarm Timings"
        android:textColor="#FFF"
        android:textSize="20sp" />

  </android.support.v7.widget.Toolbar >


  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/actionBackground"
      android:gravity="center"
      android:padding="5dp"
      android:paddingBottom="15sp"
      android:text="Note: This will change the alarm timings for all the medicines."
      android:textColor="#FFF"
      android:textSize="14sp" />


  <ScrollView
      android:layout_width="fill_parent"
      android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

      <RadioGroup
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:weightSum="2" >

        <RadioButton
            android:id="@+id/hr12"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="12 hours format" />

        <RadioButton
            android:id="@+id/hr24"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="24 hours format" />

      </RadioGroup >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:background="@drawable/edit_text_background2"
          android:orientation="horizontal"
          android:paddingBottom="5sp" >

        <TextView
            android:layout_width="140sp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:layout_marginLeft="5dp"
            android:padding="0dp"
            android:text="Before Breakfast:"
            android:textColor="#000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/pref_beforeBreakfast"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:focusable="false"
            android:inputType="none"

            android:textSize="16sp" />
      </LinearLayout >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="5sp"
          android:background="@drawable/edit_text_background2"
          android:orientation="horizontal"
          android:paddingBottom="5sp" >

        <TextView
            android:layout_width="140sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="After Breakfast:"
            android:textColor="#000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/pref_afterBreakfast"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"

            android:focusable="false"
            android:inputType="none"
            android:textSize="16sp" />
      </LinearLayout >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/edit_text_background2"
          android:orientation="horizontal"
          android:paddingBottom="5sp" >

        <TextView
            android:layout_width="140sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Before Lunch:"
            android:textColor="#000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/pref_beforeLunch"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:layout_marginLeft="5dp"
            android:focusable="false"
            android:inputType="none"

            android:textSize="16sp" />
      </LinearLayout >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/edit_text_background2"
          android:orientation="horizontal"
          android:paddingBottom="5sp" >

        <TextView
            android:layout_width="140sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="After Lunch:"
            android:textColor="#000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/pref_afterLunch"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:layout_marginLeft="5dp"
            android:focusable="false"

            android:inputType="none"
            android:textSize="16sp" />
      </LinearLayout >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/edit_text_background2"
          android:orientation="horizontal"
          android:paddingBottom="5sp" >

        <TextView
            android:layout_width="140sp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:layout_marginLeft="5dp"
            android:text="Before Dinner:"
            android:textColor="#000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/pref_beforeNight"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:layout_marginLeft="5dp"
            android:focusable="false"

            android:inputType="none"
            android:textSize="16sp" />
      </LinearLayout >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/edit_text_background2"
          android:orientation="horizontal"
          android:paddingBottom="5sp" >

        <TextView
            android:layout_width="140sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="After Dinner:"
            android:textColor="#000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/pref_afterNight"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:layout_marginLeft="5dp"
            android:focusable="false"
            android:inputType="none"
            android:textColor="#000"

            android:textSize="16sp" />
      </LinearLayout >

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal" >

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background_states"
            android:onClick="saveTimePrefs"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:text="Save"
            android:textColor="#FFF" />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:background="@drawable/button_background_states"
            android:onClick="setDefaultTimePrefs"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:text="Default"
            android:textColor="#FFF" />


      </LinearLayout >

    </LinearLayout >
  </ScrollView >

</LinearLayout >