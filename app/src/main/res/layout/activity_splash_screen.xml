<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/actionBackground"
    tools:context="architect.jazzy.medicinereminder.Activities.SplashScreen">
    <!--android:background="#ff7879ff"-->
    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medicine Reminder"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:id="@+id/ssmr"
            android:layout_gravity="center"/>
    <ImageView
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/icon"
        android:layout_gravity="center"
        android:src="@drawable/capsuleicon"/>

    <TextView android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true"
        android:textColor="#FFFFFF"
        android:layout_below="@id/icon"
        android:textSize="38sp"
        android:gravity="center"
        android:text="Your complete medical partner" />



</LinearLayout>
</RelativeLayout>
