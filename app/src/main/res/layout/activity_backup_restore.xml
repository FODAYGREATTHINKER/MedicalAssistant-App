<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MedicalAssistant.Activities.BackupRestore" >

  <android.support.v7.widget.Toolbar
      android:id="@+id/toolbar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/actionBackground"
      android:theme="@style/Theme.AppCompat" />

  <android.support.design.widget.TabLayout
      android:id="@+id/tabLayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/actionBackgroundDarker"
      app:tabBackground="@color/actionBackgroundDarker"
      app:tabGravity="fill"
      app:tabIndicatorColor="#FFF"
      app:tabMode="fixed"
      app:tabSelectedTextColor="#FFF"
      app:tabTextColor="#EEE" />

  <android.support.v4.view.ViewPager
      android:id="@+id/viewPager"
      android:layout_width="match_parent"
      android:layout_height="match_parent" />
  <!--<include layout="@layout/fragment_import"-->
  <!--/>-->

</LinearLayout >
