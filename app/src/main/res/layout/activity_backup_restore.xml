<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".MedicalAssistant.Activities.BackupRestore">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/actionBackground"
        android:theme="@style/Theme.AppCompat" />

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="fixed"
        android:background="@color/actionBackgroundDarker"
        app:tabBackground="@color/actionBackgroundDarker"
        app:tabGravity="fill"
        app:tabIndicatorColor="#FFF"
        app:tabSelectedTextColor="#FFF"
        app:tabTextColor="#EEE"
        android:id="@+id/tabLayout" />

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/viewPager" />
    <!--<include layout="@layout/fragment_import"-->
        <!--/>-->

</LinearLayout>
