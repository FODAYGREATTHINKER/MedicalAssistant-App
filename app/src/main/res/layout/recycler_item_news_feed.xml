<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/backParent"
    android:minHeight="@dimen/newsItemHeight"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/newsItemHeight"
        android:gravity="center_vertical"
        android:background="@color/newsItemBackgroundColor"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:cardMaxElevation="5dp">

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:minHeight="@dimen/newsItemHeight"
            android:weightSum="10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="News Item"
                android:textColor="@color/newsItemTextColor"
                android:textSize="@dimen/newsItemTextSize" />


            <TextView
                android:id="@+id/dateView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColor="#333"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_weight="2"
                android:textSize="10sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:id="@+id/colorIndicator"
                android:background="@color/color_default" />

        </LinearLayout>


    </android.support.v7.widget.CardView>
</FrameLayout>