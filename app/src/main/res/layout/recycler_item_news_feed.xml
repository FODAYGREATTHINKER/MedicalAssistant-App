<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/backParent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/newsItemHeight" >

  <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/newsItemBackgroundColor"
      android:gravity="center_vertical"
      android:minHeight="@dimen/newsItemHeight"
      app:cardCornerRadius="5dp"
      app:cardElevation="5dp"
      app:cardMaxElevation="5dp"
      app:cardPreventCornerOverlap="true"
      app:cardUseCompatPadding="true" >

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:minHeight="@dimen/newsItemHeight"
        android:orientation="vertical"
        android:weightSum="10" >

      <TextView
          android:id="@+id/textView"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="8"
          android:gravity="center_vertical"
          android:padding="5dp"
          android:text="News Item"
          android:textColor="@color/newsItemTextColor"
          android:textSize="@dimen/newsItemTextSize" />


      <TextView
          android:id="@+id/dateView"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="2"
          android:paddingLeft="5dp"
          android:paddingRight="5dp"
          android:textColor="#333"
          android:textSize="10sp" />

      <View
          android:id="@+id/colorIndicator"
          android:layout_width="match_parent"
          android:layout_height="2dp"
          android:background="@color/color_default" />

    </LinearLayout >


  </android.support.v7.widget.CardView >
</FrameLayout >